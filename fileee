#include <iostream> 
using namespace std;

int main()
{
    for (int i = 1; i < 21; i++) {       //цикл, переводящий на новую строчку
        for (int j = 1; j <= 39; j++) {   //цикл, печатающий Х или пробел 
            if (j >= (41 - 2*i))   //условие, сравнивающее номер элемента в строке и номер строки
                cout << "X";       //Х-ми станут элементы, номер которых соответствует условию
            else
                cout << " ";       //остальные будут пробелами
        }
        cout << endl;
    }

    return 0;                                                      
}
