#include <iostream> 
using namespace std;

int main()
{
    int x, fact=1;  //х-переменная, факториал которой нужно вычислить
                    //fact-значение самого факториала
    cin >> x;
    while (x != 0) {    //цикл, запрпашивающий х, пока не будет введен 0
        while (x > 1) {    //цикл, в котором х перебирает значения от х до 1 и умножается на факториал
            fact = fact * x;
            x--;
        }
        cout << fact << endl;   //выводим итоговое значение факториала
        fact = 1;               //сбрасываем fact
        cin >> x;               
    }

    return 0; 
}
