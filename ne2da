#include <iostream> 
using namespace std;

int main()
{
    int f1, f2, sh1, sh2, p1, p2,f,sh,p;
    char ans='y'; //переменная, записывающая ответ пользователя, продолжать ли действия программе
    while (ans == 'y') { //пока пользователь отвечает y (yes)
        cout << "Enter first sum: "; cin >> f1 >> sh1 >> p1; //запрашиваем первую сумму
        cout << "Enter second sum: "; cin >> f2 >> sh2 >> p2; //запрашиваем вторую сумму
        p = (p1 + p2) % 12; //итоговое количество пенсов - это остаток от деления на 12 суммы первого и второго значения  
        sh = (sh1 + sh2 + (p1 + p2) / 12) % 20; //далее по аналогии, но прибавляем 1, если сумма предыдущих была больше 12 
        f = (f1 + f2 + (sh1 + sh2 + (p1 + p2) / 12) / 20);                                           //и 20 соответственно
        cout << f << " " << sh << " " << p << endl << "Continue? (y/n) ";
        cin >> ans; //записываем ответ
    }
    return 0;
}
